      </EmbeddedResource>
    </ItemGroup>

    <ItemGroup>
      <Compile Update="Resources\DTOs\Users\CreateUserRequest.en.Designer.cs">
        <DesignTime>True</DesignTime>
        <AutoGen>True</AutoGen>
        <DependentUpon>CreateUserRequest.en.resx</DependentUpon>
      </Compile>
      <Compile Update="Resources\DTOs\Users\CreateUserRequest.uk.Designer.cs">
        <DesignTime>True</DesignTime>
        <AutoGen>True</AutoGen>
        <DependentUpon>CreateUserRequest.uk.resx</DependentUpon>
      </Compile>
