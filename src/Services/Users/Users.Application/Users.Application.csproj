        <LastGenOutput>CreateUser.en.Designer.cs</LastGenOutput>
      </EmbeddedResource>
      <EmbeddedResource Update="Resources\DTOs\Users\CreateUserRequest.uk.resx">
        <Generator>ResXFileCodeGenerator</Generator>
